<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.appcambiarcolor.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="APP CHANGE COLOR"/>

    <HBox spacing="20.0" alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
        <Button text="RED!" onAction="#onChangeRedColorButtonClick" styleClass="lbl, lbl-danger, -fx-font-size: 20;" prefWidth="100" prefHeight="40"/>
        <Button text="GREEN!" onAction="#onChangeGREENColorButtonClick" styleClass="lbl, lbl-success, -fx-font-size: 20;" prefWidth="100" prefHeight="40"/>
        <Button text="YELLOW!" onAction="#onChangeYellowColorButtonClick" styleClass="lbl, lbl-warning, -fx-font-size: 20;" prefWidth="100" prefHeight="40"/>
    </HBox>
</VBox>
